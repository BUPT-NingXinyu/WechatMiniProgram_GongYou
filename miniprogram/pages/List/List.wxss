/* pages/List/List.wxss */
page {
  background-color: rgb(240, 240, 240);
}

.block {
  background-color: rgb(255, 255, 255);
  margin: 20rpx 40rpx 10rpx 40rpx;
  border-radius: 20rpx;
  padding: 20rpx 50rpx 20rpx 50rpx;
  height: auto;
  font-size:14px;
}

.head {
  display: flex;
  justify-content: space-between;
}

.line {
  height: 1px;
  width: 100%;
  color: rgb(100, 100, 100);
  margin: 5px 0px 5px 0px;
}

.status {
  font-size: 15px;
  color:rgb(131, 131, 131)
}
.statusPlus {
  color:rgb(78, 91, 214);
  font-weight: bold;
}

.name {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 5px;
}

.address {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 5px;
}

.guest {
  font-size:13px;
  color:rgb(131, 131, 131);
  margin-bottom: 5px;
}

.buttonBox {
  display:flex;
  justify-content:flex-end;
  align-items: flex-end;
}
.button {
  display: flex;
  justify-content: center;
  width: 30%;
  margin-top: 20rpx;
  border-radius: 40px;
  border-style: solid;
  border-width: 1px;
  color: rgb(98, 113, 252);
}
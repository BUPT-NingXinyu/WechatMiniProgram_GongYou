/* miniprogram/pages/shop/shop.wxss */
page{
  background-color: #4169E1;
}
.tab-bar-height {
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
}
.VerticalNav.nav {
  margin-left:30rpx;
  width: 170rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
  position: absolute;
  width:100%;

}
.VerticalMain{
  background-color: #f1f1f1;
}